<ui:FluentWindow
    x:Class="WpfApp1.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Управление товарами"
    Width="1280"
    Height="800"
    MinWidth="1000"
    MinHeight="600"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    mc:Ignorable="d">

    <!--  Основная сетка с TitleBar  -->
    <Grid>
        <Grid.RowDefinitions>
            <!--  TitleBar  -->
            <RowDefinition Height="Auto" />
            <!--  Toolbar с кнопками  -->
            <RowDefinition Height="Auto" />
            <!--  Основной контент  -->
            <RowDefinition Height="*" />
            <!--  Статус бар  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  TITLEBAR: Встроенный заголовок WPF-UI  -->
        <ui:TitleBar
            Title="Управление товарами"
            Grid.Row="0"
            CanMaximize="True"
            Icon="{ui:SymbolIcon Home24}"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
            ShowClose="True"
            ShowMaximize="True"
            ShowMinimize="True">
            <ui:TitleBar.Header>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:SymbolIcon
                        Margin="0,0,8,0"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                        Symbol="ShoppingBag24" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Text="CRUD Система" />
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!--  TOOLBAR: Панель инструментов  -->
        <Border
            Grid.Row="1"
            Padding="16,12"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <ui:Button
                    Name="RefreshButton"
                    Margin="0,0,8,0"
                    Appearance="Secondary"
                    Click="RefreshButton_Click"
                    Content="Обновить"
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    ToolTip="Обновить список товаров" />

                <ui:Button
                    Name="DeleteButton"
                    Appearance="Danger"
                    Click="DeleteButton_Click"
                    Content="Удалить"
                    Icon="{ui:SymbolIcon Delete24}"
                    IsEnabled="False"
                    ToolTip="Удалить выбранный товар" />
            </StackPanel>
        </Border>

        <!--  MAIN CONTENT: Основной контент  -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <!--  Таблица товаров  -->
                <ColumnDefinition Width="*" MinWidth="400" />
                <!--  Разделитель  -->
                <ColumnDefinition Width="16" />
                <!--  Панель редактирования  -->
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!--  SECTION: Таблица товаров  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Заголовок таблицы  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,12"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Список товаров" />

                <!--  Таблица  -->
                <Border
                    Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <DataGrid
                        Name="ProductsDataGrid"
                        Margin="1"
                        AlternatingRowBackground="{DynamicResource SubtleFillColorSecondaryBrush}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="True"
                        CanUserResizeRows="False"
                        CanUserSortColumns="True"
                        FontSize="16"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        RowHeight="40"
                        SelectionChanged="ProductsDataGrid_SelectionChanged"
                        SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width=".5*"
                                Binding="{Binding Uid}"
                                Header="UID" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Название" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="Описание" />

                            <DataGridTextColumn
                                Width=".5*"
                                Binding="{Binding Price, StringFormat=C}"
                                Header="Цена" />

                            <DataGridTextColumn
                                Width=".5*"
                                Binding="{Binding Quantity}"
                                Header="Кол-во" />

                            <DataGridTextColumn
                                Width=".5*"
                                Binding="{Binding CreatedDate, StringFormat=dd.MM.yyyy}"
                                Header="Дата создания" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!--  Информация о количестве  -->
                <TextBlock
                    Name="ProductCountTextBlock"
                    Grid.Row="2"
                    Margin="0,8,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Загрузка..." />
            </Grid>

            <!--  SECTION: Панель редактирования  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Заголовок формы  -->
                <TextBlock
                    Name="FormTitleTextBlock"
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Добавить товар" />

                <!--  Форма  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Название  -->
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Название *" />
                        <ui:TextBox
                            Name="NameTextBox"
                            Margin="0,0,0,16"
                            GotFocus="FormField_GotFocus"
                            PlaceholderText="Введите название..." />

                        <!--  Описание  -->
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Описание" />
                        <ui:TextBox
                            Name="DescriptionTextBox"
                            Height="60"
                            Margin="0,0,0,16"
                            AcceptsReturn="True"
                            GotFocus="FormField_GotFocus"
                            PlaceholderText="Описание товара..."
                            TextWrapping="Wrap" />

                        <!--  Цена  -->
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Цена *" />
                        <ui:NumberBox
                            Name="PriceNumberBox"
                            Margin="0,0,0,16"
                            GotFocus="FormField_GotFocus"
                            Minimum="0"
                            PlaceholderText="0,00" />

                        <!--  Количество  -->
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Количество *" />
                        <ui:NumberBox
                            Name="QuantityNumberBox"
                            Margin="0,0,0,24"
                            GotFocus="FormField_GotFocus"
                            Minimum="0"
                            PlaceholderText="0" />

                        <!--  Кнопки  -->
                        <ui:Button
                            Name="SaveButton"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Appearance="Primary"
                            Click="SaveButton_Click"
                            Content="Сохранить"
                            Icon="{ui:SymbolIcon Save24}" />

                        <ui:Button
                            Name="NewButton"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Appearance="Secondary"
                            Click="NewButton_Click"
                            Content="Создать новый"
                            Icon="{ui:SymbolIcon Add24}" />

                        <ui:Button
                            Name="ClearButton"
                            HorizontalAlignment="Stretch"
                            Appearance="Secondary"
                            Click="ClearButton_Click"
                            Content="Очистить"
                            Icon="{ui:SymbolIcon Eraser24}" />

                        <!--  Подсказка  -->
                        <Border
                            Margin="0,16,0,0"
                            Padding="12"
                            Background="{DynamicResource SystemFillColorAttentionBackgroundBrush}"
                            BorderBrush="{DynamicResource SystemFillColorAttentionBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Поля отмеченные звездочкой (*) обязательны для заполнения"
                                TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!--  FOOTER: Статус бар  -->
        <Border
            Grid.Row="3"
            Padding="16,8"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Name="StatusTextBlock"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="Готов к работе" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="WPF CRUD App v1.0" />
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
